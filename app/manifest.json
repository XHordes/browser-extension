{
  "name": "XHordes",
  "version": "0.1.0",
  "description": "A mod loader for Hordes.io",
  "permissions": ["storage", "declarativeContent", "webRequest", "activeTab"],
  "background": {
    "scripts": ["browser-polyfill.min.js", "background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/xhordes16.png",
      "32": "images/xhordes32.png",
      "48": "images/xhordes48.png",
      "128": "images/xhordes128.png"
    }
  },
  "icons": {
    "16": "images/xhordes16.png",
    "32": "images/xhordes32.png",
    "48": "images/xhordes48.png",
    "128": "images/xhordes128.png"
  },
  "manifest_version": 2
}